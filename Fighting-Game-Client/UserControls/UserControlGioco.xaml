<UserControl x:Class="Fighting_Game_Client.UserControls.UserControlGioco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fighting_Game_Client.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded" Unloaded="Grid_Unloaded">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/BackGround/sfondoGioco.png"/>
        </Grid.Background>
        <Label x:Name="label1" Content="Player1:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="177" Margin="19,12,0,0"/>
        <ProgressBar x:Name="progressBarVitaGiocatore1" Height="19" Width="122" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,43,0,0"/>
        <Label x:Name="label2" Content="Player2:" Height="26" Width="136" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,14,10,0"/>
        <ProgressBar x:Name="progressBarVitaGiocatore2" Height="19" Width="122" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,40,24,0"/>
        <Canvas x:Name="canvas" KeyDown="canvas_KeyDown_1" KeyUp="canvas_KeyUp_1" Focusable="True" Margin="0,38,0,-38"/>

    </Grid>
</UserControl>
